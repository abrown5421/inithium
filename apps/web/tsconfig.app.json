{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["vite/client"],
    "rootDir": "src",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["ES2021", "DOM"],
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.vue",
    "src/**/*.test.vue"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue"],
  "references": [
    {
      "path": "../../packages/api-client/tsconfig.lib.json"
    },
    {
      "path": "../../packages/assets/tsconfig.lib.json"
    },
    {
      "path": "../../packages/auth/tsconfig.lib.json"
    },
    {
      "path": "../../packages/ui/tsconfig.lib.json"
    }
  ]
}
